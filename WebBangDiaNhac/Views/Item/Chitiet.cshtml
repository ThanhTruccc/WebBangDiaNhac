@model WebBangDiaNhac.Models.SanPham
@{
    ViewBag.Title = "Chi tiết sản phẩm";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}
<style>
    .product-container {
        display: flex;
        flex-wrap: wrap;
        gap: 40px;
        margin-top: 40px;
    }

    .product-image {
        flex: 1 1 45%;
        text-align: center;
    }

        .product-image img {
            max-width: 100%;
            border-radius: 10px;
        }

    .product-info {
        flex: 1 1 45%;
        font-family: 'Segoe UI', sans-serif;
    }

        .product-info h2 {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .product-info .price {
            font-size: 26px;
            color: #c9302c;
            margin: 20px 0;
        }

        .product-info select,
        .product-info input[type=number] {
            padding: 6px 10px;
            margin-top: 10px;
            margin-bottom: 20px;
            width: 100px;
        }

    .btn-add {
        background-color: #961b1e;
        color: white;
        border: none;
        padding: 12px 30px;
        font-size: 16px;
        border-radius: 4px;
        transition: 0.3s;
    }

        .btn-add:hover {
            background-color: #7d1416;
        }

    .tab-container {
        margin-top: 40px;
    }

    .tab {
        padding: 10px 20px;
        display: inline-block;
        border: none;
        background: transparent;
        font-weight: bold;
        border-bottom: 3px solid transparent;
        cursor: pointer;
    }

        .tab.active {
            border-color: #961b1e;
        }

    .tab-content {
        display: none;
        margin-top: 20px;
    }

        .tab-content.active {
            display: block;
        }
</style>

<div class="container">
    <div class="product-container">
        <!-- Hình ảnh -->
        <div class="product-image">
            <img src="~/images/@Model.hinhAnh" alt="@Model.tenSanPham" />
        </div>

        <!-- Thông tin -->
        <div class="product-info">
            <h2>@Model.tenSanPham</h2>
            <p><strong>Tình trạng:</strong> Còn hàng</p>
            <p><strong>Xuất xứ:</strong> Việt Nam</p>
            <p><strong>Thương hiệu:</strong> Hãng Đĩa Thời Đại</p>

            <div class="price">
                @String.Format("{0:#,##0}₫", Model.donGia)
            </div>

            <label>Tiêu đề:</label>
            <select>
                <option>Standard CD</option>
                <option>Deluxe CD</option>
            </select>

            <div>
                <label>Số lượng:</label>
                <input type="number" name="quantity" value="1" min="1" />
            </div>

            @using (Html.BeginForm("ThemGioHang", "GioHang", new { idSanPham = Model.idSanPham, strURL = Request.Url.ToString() }))
            {
                <input type="submit" value="Thêm vào giỏ" class="btn-add" />
            }

            <p style="margin-top: 10px;"><i>Chia sẻ</i></p>
        </div>
    </div>

    <!-- Tabs -->
    <div class="tab-container">
        <button class="tab active" onclick="showTab('mota')">Mô tả sản phẩm</button>
        <button class="tab" onclick="showTab('doitra')">Chính sách đổi trả</button>

        <div id="mota" class="tab-content active">
            <p>@Model.moTa</p>
        </div>

        <div id="doitra" class="tab-content">
            <p>
                Hàng đã mua không được đổi trả nếu không có lỗi từ phía nhà sản xuất.<br />
                Vui lòng kiểm tra kỹ hàng hóa trước khi thanh toán.
            </p>
        </div>
    </div>
</div>

<script>
    function showTab(tabId) {
        document.querySelectorAll('.tab').forEach(tab => tab.classList.remove('active'));
        document.querySelectorAll('.tab-content').forEach(tab => tab.classList.remove('active'));

        document.getElementById(tabId).classList.add('active');
        event.target.classList.add('active');
    }
</script>
