        <div class="bradcumbContent">

        </div>
    </section>
    <section>
        <div class="register-container">
            <h2 class="register-title">Đăng ký tài khoản</h2>
            @using (Html.BeginForm("DangKy", "User", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    @Html.LabelFor(model => model.hoTen, "Họ và tên")
                    @Html.TextBoxFor(model => model.hoTen, new { @class = "form-control", placeholder = "Nhập họ và tên" })
                    @Html.ValidationMessageFor(model => model.hoTen, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.diaChi, "Địa chỉ")
                    @Html.TextBoxFor(model => model.diaChi, new { @class = "form-control", type = "date" })
                    @Html.ValidationMessageFor(model => model.diaChi, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.email, "Email")
                    @Html.TextBoxFor(model => model.email, new { @class = "form-control", placeholder = "Nhập email" })
                    @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.soDienThoai, "Số điện thoại")
                    @Html.TextBoxFor(model => model.soDienThoai, new { @class = "form-control", placeholder = "Nhập số điện thoại" })
                    @Html.ValidationMessageFor(model => model.soDienThoai, "", new { @class = "text-danger" })
                </div>


                <div class="form-group">
                    @Html.LabelFor(model => model.matKhau, "Mật khẩu")
                    @Html.PasswordFor(model => model.matKhau, new { @class = "form-control", placeholder = "Nhập mật khẩu" })
                    @Html.ValidationMessageFor(model => model.matKhau, "", new { @class = "text-danger" })
                </div>

                <button type="submit" class="btn-submit">Đăng ký</button>
            }
        </div>
    </section>
    <style>
        .register-container {
            max-width: 500px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .register-title {
            text-align: center;
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 20px;
            color: #333;
        }

        .form-group {
            margin-bottom: 15px;
        }

        label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
            color: #555;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 5px;
            transition: all 0.3s ease;
        }

            .form-control:focus {
                border-color: #28a745;
                box-shadow: 0 0 5px rgba(40, 167, 69, 0.5);
                outline: none;
            }

        .btn-submit {
            width: 100%;
            padding: 10px 15px;
            font-size: 18px;
            font-weight: bold;
            color: #fff;
            background-color: #28a745;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .btn-submit:hover {
                background-color: #218838;
            }

        .text-danger {
            color: #dc3545;
            font-size: 14px;
            margin-top: 5px;
        }
    </style>


